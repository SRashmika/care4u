<%- include("partials/Header")-%>

<section id="admin-ogin-background">
    <div class="login-box">
      <form action="/admin/login" method="post">
         <h2 class="txt-h admin-login-title">Admin Login</h2>
        
         <div id="error-message"><%= ErrorMessage%></div>
         <div class="login-input-box">
             <span class="icon"><ion-icon name="person-circle-outline"></ion-icon></span>
             <input type="text" name="username" required>
             <label class="txt-b"> Username</label>
         </div>
         <div class="login-input-box">
             <span class="icon"><ion-icon name="lock-closed-outline"></ion-icon></span>
             <input type="password" name="password" required>
             <label class="txt-b"> Password</label>
         </div>
 
         <div class="login-forgot">
             <label>
                 
                 <a href="#" class="txt-b">Forgot Password?</a>
         </div>
         <button type="submit" id="login-button" class="txt-b"> Login </button>
        
      </form>
    </div>
 </section> 

<%- include("partials/Footer")-%>